<Window x:Class="ProceduralOCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProceduralOCR"
        mc:Ignorable="d"
        Title="Procedural OCR" Height="330" Width="370">
    <Grid>
        <Label Content="© Basile Van Hoorick" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Bottom" Foreground="#7F000000"/>
        <Button x:Name="btnTrain" Content="Train" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnGenerate" Content="Generate" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnBrowse" Content="Browse..." HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnDetect" Content="Detect" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="75"/>
        <Image HorizontalAlignment="Left" Height="256" Margin="90,10,0,0" VerticalAlignment="Top" Width="256"/>
        <TextBox x:Name="txtResult" HorizontalAlignment="Left" Margin="10,110,0,33" TextWrapping="Wrap" Text="Result" VerticalAlignment="Stretch" Width="75"/>

    </Grid>
</Window>
