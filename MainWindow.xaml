<Window x:Class="ProceduralOCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProceduralOCR"
        mc:Ignorable="d"
        Title="Procedural OCR" Height="640" Width="640" WindowStartupLocation="CenterScreen" Icon="WritingFeatherRed.ico">
    <Grid>
        <Label Content="© Basile Van Hoorick" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Bottom" Foreground="#7F000000"/>
        <Button x:Name="btnExample" Content="Example" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnExample_Click"/>
        <Button x:Name="btnTrain" Content="Train" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75" Click="btnTrain_Click"/>
        <Button x:Name="btnTest" Content="Test" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="75" Click="btnTest_Click"/>
        <Button x:Name="btnBrowse" Content="Browse..." HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="75" Click="btnBrowse_Click"/>
        <TextBox x:Name="txtResult" HorizontalAlignment="Left" Margin="90,10,0,0" TextWrapping="Wrap" Text="Result" VerticalAlignment="Top" Width="160" IsReadOnly="True" FontSize="16" VerticalScrollBarVisibility="Visible" Height="240"/>
        <Image x:Name="imgInput" HorizontalAlignment="Left" Margin="10,255,0,10"  Width="240"  VerticalAlignment="Stretch" />
        <Image x:Name="imgNetwork" HorizontalAlignment="Stretch" Margin="255,10,10,26" VerticalAlignment="Stretch" />

    </Grid>
</Window>
